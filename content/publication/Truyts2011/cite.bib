@article{Truyts2011,
	abstract = {Dans les derni{\`e}res d{\'e}cennies, l'analyse {\'e}conomique des r{\'e}seaux et groupes sociaux s'est rapidement d{\'e}velopp{\'e}e. Cet article traite de quelques m{\'e}canismes par lesquels les r{\'e}seaux et groupes sociaux affectent la pauvret{\'e} et les in{\'e}galit{\'e}s sociales et {\'e}conomiques. Les r{\'e}seaux sociaux et les groupes peuvent {\`a} la fois maintenir les gens dans la pauvret{\'e} ou {\^e}tre des outils pour l'{\'e}mancipation des pauvres. Une politique efficace pour r{\'e}duire la pauvret{\'e} devrait tenir compte de ces m{\'e}canismes, ou m{\^e}me les employer pour le plus grand bien.},
	author = {Truyts, Tom},
